# Alias

######################################################

alias edba="vim ~/.bash_alias"

# ls
alias sl="ls --color=auto"
alias ls='ls --color=auto'
alias la='ls -A --color=auto'
alias las='ls -lASh --color=auto'

# git
alias g="git"
alias gc="git clone "
alias ga="git add --all"
alias gcm="git commit -m "
alias gp="git push"
alias gpu="git pull"

# General
alias vi="vim"
alias v="vim"
alias cls="clear"
alias py="python3"
alias cp="cp -i"
alias rm="rm -i"

# Movement
alias ..="cd .."
alias 2.="cd ../.."
alias 3.="cd ../../.."
